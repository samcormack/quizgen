{% extends "base.html.j2" %}

{% block content %}
  <button type="button" onclick="window.location.href= '/?type={{ quiz.name }}';">Change parameters</button>
  <form action="/" method="post">
    {% for key, val in quiz.values.items() %}
    <input type="hidden" name="{{ key }}" value="{{ val }}">
    {% endfor %}
    <input type="hidden" name="quiztype" value="{{ quiz.name }}">
    <input type="submit" value="Re-generate">
  </form>
  {% for question in questions %}
  <p>{{question}}</p>
  {% endfor %}
{% endblock %}
